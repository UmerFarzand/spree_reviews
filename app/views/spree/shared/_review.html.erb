<div id="review">
  <table class="table table-striped table-bordered">
    <tbody>
      <tr>
        <td style="width: 50%;"><strong><%= review.name%></strong></td>
        <td class="text-right">
          <span class="attribution"><%= Spree.t('Date:') %>
            <strong><%= review.created_at.to_date %></strong>
          </span>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <p><%= review.review %></p>
          <div class="ratings">
            <div class="rating-box">
              <span class="reviews-rating" title="<%= txt_stars(review.rating) %>">
                <%= render 'spree/reviews/stars', stars: review.rating %>
            </div>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="text-right"></div>
</div>